<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="@drawable/app_background_new">


   <ImageView
       android:id="@+id/image_add_new_publication"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/empty_foto"
       android:layout_marginBottom="25dp"
       android:layout_marginTop="50dp"/>

    <com.smb.glowbutton.NeonButton
        android:id="@+id/file_new_publication_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textSize="20sp"
        app:nb_cornerRadius="15dp"
        app:nb_enableAnimationDuration="500"
        app:nb_gradientEnd="@color/vk_blue_light"
        app:nb_gradientStart="@color/vk_blue_light"
        app:nb_text="@string/download_file_button"
        app:nb_textStyle="normal" />

    <EditText
        android:id="@+id/notification_add_new_publication"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/searchview_border"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:minLines="7"
        android:hint="@string/input_text_planer_add"
        android:textColorHint="@color/vk_blue"
        android:paddingStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/vk_blue_light"
        android:gravity="start"
        android:paddingTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/plan_add_new_publication_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/plan_ico"
            android:background="@android:color/transparent"
            android:text="@string/make_plan_button_text"
            android:textColor="@color/vk_blue_light"
/>

        <Button
            android:id="@+id/public_add_new_publication_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/public_vector"
            android:background="@android:color/transparent"
            android:text="@string/make_public_button_text"
            android:textColor="@color/vk_blue_light" />

    </LinearLayout>

</LinearLayout>