<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".metrick.metrick_view">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/metrick_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/metrick_graph_menu"
        app:itemIconTint="@drawable/buttom_navigation_view"
        app:itemTextColor="@drawable/buttom_navigation_view"
        android:background="@android:color/transparent"
        app:elevation="0dp" />

    <fragment
        android:id="@+id/metrick_nav_host_fragmen"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/metrick_navigation" />


</RelativeLayout>